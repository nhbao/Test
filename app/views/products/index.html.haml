%h1 Products
%table
  %thead
    %tr
      %th Name
      %th Price
      %th Tax
      %th{:colspan => "3"}
  %tbody
    - @products.each do |product|
      %tr
        %td= product.name
        %td= product.price
        %td= product.tax
        %td= button_to 'Show', product, method: :get
        %td= button_to 'Edit', edit_product_path(product), method: :get
        %td= button_to 'Delete', product, method: :delete
= link_to 'New Product', new_product_path
= link_to 'shop', shops_path