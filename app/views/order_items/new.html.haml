%h1 New order
%table
  %thead
    %tr
      %th Name
      %th{style:"text-align:left"} Price Quantity
  %tbody
    - @products.each do |product|
      %tr
        %td= product.name
        %td
          = form_for [@order, @order_item], remote: true  do |f|
            = f.hidden_field :product_id, :value => product.id
            = f.text_field :price
            = f.number_field :quantity, :value => 1, :min =>  0
            = f.submit "Add to Order "
%br
#order
  = render 'orders/order'
