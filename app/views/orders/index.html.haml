%h1 Orders
%table
  %thead
    %tr
      %th Oder
      %th Sales Taxes
      %th Total
      %th{:colspan => "3"}
  %tbody
    - @orders.each do |order|
      %tr
        %td= order.id
        %td= order.sales_taxes
        %td= order.total.round(2)
        %td= button_to 'Show', order, method: :get
        %td= button_to 'Delete', order, method: :delete
        %td= link_to "export", export_orders_path(format: :csv, id: order.id)
%br
= link_to 'New oder', new_order_path
